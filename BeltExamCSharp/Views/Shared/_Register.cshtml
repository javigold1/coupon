@model User

<form asp-controller="Users" asp-action="Register" method="POST">
    <div class="mb-3">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger font-weight-bold"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <button class="btn btn-outline-primary">Register</button>
</form>